{{!< world}}
<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Knitting a winner</title>
    <style>
        
        *{
            box-sizing: border-box;
        }
        body{
            background: lightgrey;
            font-family: 'Roboto', sans-serif;
            font-weight: 300;
            font-size: 1.2rem;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        #output{
            width: 100vw;
            height: 80vh;
            padding: 2vh 5vw;
            margin: 0 auto;
            background: white;
            overflow-y: scroll;
            transition: background 0.5s, color 2s;
            flex-grow: 1;
        }
        
        #output::-webkit-scrollbar-track {
            background-color: #7a7a7a;
        }
        #output::-webkit-scrollbar-track-piece {
            background-color: #2e2e2e;
        }
        #output::-webkit-scrollbar-thumb{
            background-color: #4f4f4f;
            border-radius: 10px;
        }
        #output::-webkit-scrollbar {
            background-color: #7a7a7a;
        }
        #input{
            width: 100vw;
            padding: 25px;
            background: linear-gradient(to bottom, rgba(140,140,140,1) 0%, rgba(201,201,201,1) 100%);
            display: flex;
        }
        #inputBox{
            font-size: 20px;
            width: 50vw;
            display: inline-block;
            padding: 10px;
        }
        #send{
            font-size: 20px;
            margin: 0 0 0 5vw;
            text-align: center;
            padding: 10px;
        }
        .request{
            color: lightsteelblue;
        }
        .response{
            color: black;
        }
    </style>
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <div id="output"></div>
    <form id="input">
        <input type="text" id="inputBox" autocomplete="off"/>
        <button id="send">enter</button>
    </form>
<!--<script src="jquery-1.12.3.min.js"></script>-->
<script src="js/bundle.js"></script>
</body>
</html>

